<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forget_password_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.donation.shefa.soleeklab.ForgetPassword">

    <ImageView
        android:id="@+id/icon"
        android:src="@drawable/icon"
        android:layout_width="1000dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/icon"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:layout_below="@+id/icon"
        android:id="@+id/forget_message"
        android:layout_centerHorizontal="true"
        android:text="We just need your registered email to sent your password instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/colorPrimaryDark"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/forget_input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forget_message">

        <EditText
            android:id="@+id/forget_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your email"
            android:inputType="textCapWords"
            android:maxLines="1" />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/forget_btn_rest"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forget_input_email"
        android:background="#FF1B9CB3"
        android:text="Reset Passwword"
        android:textColor="#ff4081" />

    <TextView
        android:layout_below="@+id/forget_btn_rest"
        android:id="@+id/forget_btn_back"
        android:layout_centerHorizontal="true"
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/colorPrimaryDark"
        />





</RelativeLayout>
